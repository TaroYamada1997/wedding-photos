// Dynamic schema that works with both SQLite and PostgreSQL
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Photo {
  id        String   @id @default(cuid())
  nickname  String
  filename  String
  originalName String
  mimeType  String
  size      Int
  imageData String   // Base64 encoded image data
  createdAt DateTime @default(now())
  
  @@map("photos")
}

model Admin {
  id       String @id @default(cuid())
  username String @unique
  password String
  
  @@map("admins")
}